{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Jupyter notebook",
            "type": "shell",
            "command": "source myvenv/Scripts/activate && jupyter notebook",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "detail": "Launches Jupyter Notebook in default browser"
        },
        {
        "label": "Git Add Commit Push - Update tasks.json",
        "type": "shell",
        "command": "git add .vscode/tasks.json && git commit -m \"Update tasks.json\" && git push",
        "problemMatcher": [],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "detail": "Runs git add, commit, and push in one task"
        }
    ]
}